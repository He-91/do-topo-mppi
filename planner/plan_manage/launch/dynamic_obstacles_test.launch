<launch>
  <!-- ============================================ -->
  <!-- 动态障碍物躲避测试配置                        -->
  <!-- ============================================ -->
  
  <!-- 地图尺寸 -->
  <arg name="map_size_x" value="40.0"/>
  <arg name="map_size_y" value="20.0"/>
  <arg name="map_size_z" value=" 5.0"/>

  <!-- 里程计话题 -->
  <arg name="odom_topic" value="/visual_slam/odom" />

  <!-- ============================================ -->
  <!-- 主要算法参数                                  -->
  <!-- ============================================ -->
  <include file="$(find ego_planner)/launch/advanced_param.xml">
    <arg name="map_size_x_" value="$(arg map_size_x)"/>
    <arg name="map_size_y_" value="$(arg map_size_y)"/>
    <arg name="map_size_z_" value="$(arg map_size_z)"/>
    <arg name="odometry_topic" value="$(arg odom_topic)"/>

    <!-- 相机位姿和深度图像 -->
    <arg name="camera_pose_topic" value="/pcl_render_node/camera_pose"/>
    <arg name="depth_topic" value="/pcl_render_node/depth"/>
    <arg name="cloud_topic" value="/pcl_render_node/cloud"/>

    <!-- 相机内参 -->
    <arg name="cx" value="321.04638671875"/>
    <arg name="cy" value="243.44969177246094"/>
    <arg name="fx" value="387.229248046875"/>
    <arg name="fy" value="387.229248046875"/>

    <!-- 最大速度和加速度 -->
    <arg name="max_vel" value="2.0" />
    <arg name="max_acc" value="2.5" />

    <!-- 规划视野（建议为感知范围的1.5倍） -->
    <arg name="planning_horizon" value="7.5" /> 

    <!-- 飞行类型：1=手动目标点，2=预设航点 -->
    <arg name="flight_type" value="1" />
    
    <!-- 全局航点（flight_type=2时使用） -->
    <arg name="point_num" value="2" />
    <arg name="point0_x" value="19.0" />
    <arg name="point0_y" value="0.0" />
    <arg name="point0_z" value="1.0" />
    <arg name="point1_x" value="-19.0" />
    <arg name="point1_y" value="0.0" />
    <arg name="point1_z" value="1.0" />
  </include>

  <!-- ============================================ -->
  <!-- 轨迹服务器                                    -->
  <!-- ============================================ -->
  <node pkg="ego_planner" name="traj_server" type="traj_server" output="screen">
    <remap from="/position_cmd" to="planning/pos_cmd"/>
    <remap from="/odom_world" to="$(arg odom_topic)"/>
    <param name="traj_server/time_forward" value="1.0" type="double"/>
  </node>

  <!-- ============================================ -->
  <!-- 航点生成器                                    -->
  <!-- ============================================ -->
  <node pkg="waypoint_generator" name="waypoint_generator" type="waypoint_generator" output="screen">
    <remap from="~odom" to="$(arg odom_topic)"/>        
    <remap from="~goal" to="/move_base_simple/goal"/>
    <remap from="~traj_start_trigger" to="/traj_start_trigger" />
    <param name="waypoint_type" value="manual-lonely-waypoint"/>    
  </node>

  <!-- ============================================ -->
  <!-- 静态障碍物地图生成器（Fast-Planner风格）       -->
  <!-- ============================================ -->
  <include file="$(find ego_planner)/launch/simulator.xml">
    <arg name="map_size_x_" value="$(arg map_size_x)"/>
    <arg name="map_size_y_" value="$(arg map_size_y)"/>
    <arg name="map_size_z_" value="$(arg map_size_z)"/>
    <!-- 减少静态障碍物数量，为动态障碍物腾出空间 -->
    <arg name="c_num" value="10"/>   <!-- 圆形障碍物：20->10 -->
    <arg name="p_num" value="150"/>  <!-- 柱状障碍物：300->150 -->
    <arg name="odometry_topic" value="$(arg odom_topic)" />
  </include>

  <!-- ============================================ -->
  <!-- 动态障碍物生成器                              -->
  <!-- ============================================ -->
  <node pkg="map_generator" type="dynamic_obstacle_generator" name="dynamic_obstacle_generator" output="screen">
    <!-- 地图参数 -->
    <param name="map/x_size" value="$(arg map_size_x)" />
    <param name="map/y_size" value="$(arg map_size_y)" />
    <param name="map/z_size" value="$(arg map_size_z)" />
    
    <!-- 更新频率 -->
    <param name="dynamic_obstacles/update_rate" value="20.0" />
    <param name="dynamic_obstacles/resolution" value="0.15" />
    
    <!-- 各类动态障碍物数量 -->
    <param name="dynamic_obstacles/num_linear" value="3" />     <!-- 直线运动 -->
    <param name="dynamic_obstacles/num_circular" value="2" />   <!-- 圆周运动 -->
    <param name="dynamic_obstacles/num_pendulum" value="2" />   <!-- 钟摆运动 -->
    <param name="dynamic_obstacles/num_random" value="1" />     <!-- 随机游走 -->
  </node>

  <!-- ============================================ -->
  <!-- 点云融合节点（合并静态和动态障碍物）            -->
  <!-- ============================================ -->
  <node pkg="map_generator" type="cloud_merger" name="cloud_merger" output="screen">
    <remap from="~static_cloud" to="/map_generator/global_cloud"/>
    <remap from="~dynamic_cloud" to="/dynamic_obstacles/cloud"/>
    <remap from="~merged_cloud" to="/pcl_render_node/cloud"/>
    <param name="publish_rate" value="20.0"/>
  </node>

  <!-- ============================================ -->
  <!-- RViz可视化                                   -->
  <!-- ============================================ -->
  <node type="rviz" name="rviz" pkg="rviz" args="-d $(find ego_planner)/launch/dynamic_test.rviz" />

</launch>
